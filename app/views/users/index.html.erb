<p style="color: green"><%= notice %></p>

<h1>Pesquisa de Usuários</h1>

<div id="pesquisa">
  <%= form_tag(users_path, method: :get) do %>
    <%= text_field_tag :query, params[:query], placeholder: "Pesquisar usuário" %>
    <%= submit_tag "Pesquisar" %>
  <% end %>
  <% @resultados.each do |registro|%>
  <% end %>
  <br>


 <table style: border = black; 2px>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>CPF</th>
      <th>Telefone</th>
    </tr>
  </thead>
  <tbody>
    <% @resultados.each do |registro| %>
      <tr>
        <td><%= registro.name %></td>
        <td><%= registro.email %></td>
        <td><%= registro.cpf %></td>
        <td><%= registro.phone %></td>
      </tr>
    <% end %>
  </tbody>
 </table>
</div>
<br>

<%= link_to "Novo Usuário", new_user_path %>

<h2>Usuários existentes:<h2>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Visualizar Usuário", user %>
    </p>
  <% end %>
</div>






